@{
    var _category_list = ViewBag.Category_list as List<DataAccessLib.Entities.Category>;
}

<div class="category__menu-bar">
    <div class="dropdown">
        <i class="fas fa-bars" data-bs-toggle="dropdown"></i>
        <ul class="dropdown-menu">
            @foreach (var item in _category_list)
            {
                <li class="dropdown-menu-item category-btn" id="@item.id">@item.name</li>
            }
        </ul>
    </div>
</div>

<div class="products">
    <div class="product__nav active col-md-2">
            @foreach (var item in _category_list)
            {
                <div class="product__nav-item category-btn" id="@item.id">@item.name</div>
            }
    </div>

    <div class="product__list col-md-10">
        <div class="product__list-content">
            @Html.Action("getProduct", "Product")
        </div>

        <hr>
        <div class="product__paging">
            <div class="pagination">
                <a href="#">«</a>
                <a href="#">1</a>
                <a class="active" href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#">5</a>
                <a href="#">6</a>
                <a href="#">»</a>
            </div>
        </div>
    </div>
</div>


<script>
    $(".category-btn").click(function () {
        var id = $(this).attr("id");
        $.ajax({
            url: "/Product/getProductByCart",
            data: { id : id },
            success: function (response) {
                $("div.product__list-content").html(response);
            }
        })
    })
</script>