@model DucVuSport.Models.RegisterModel
@using (Ajax.BeginForm("Register", "User", new AjaxOptions { HttpMethod = "POST", OnSuccess = "registerDone" }, new { @class = "account__form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form__message">Đăng ký</div>

    @*Họ và tên*@
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
        <div class="form__input">
            @Html.TextBoxFor(m => m.fullName, new { @placeholder = "Họ và tên" })
            <div class="form__icon"><i class="fas fa-envelope"></i></div>
        </div>
    </div>

    @*Số điện thoại*@
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
        <div class="form__input">
            @Html.TextBoxFor(m => m.phoneNumber, new { @placeholder = "Số điện thoại" })
            <div class="form__icon"><si class="fas fa-envelope"></si></div>
        </div>
    </div>

    @*Email*@
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        <div class="form__input">
            @Html.TextBoxFor(m => m.email, new { @placeholder = "Email" })
            <div class="form__icon"><i class="fas fa-envelope"></i></div>
        </div>
    </div>

    @*Mật khẩu*@
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        <div class="form__input pwd-input">
            @Html.PasswordFor(m => m.password, new { @class = "pw", @placeholder = "Mật khẩu" })
            <div class="form__icon"><i class="fa fa-eye-slash"></i></div>
        </div>
    </div>

    @*Nhập lại mật khẩu*@
    <div class="form-group">
        @Html.ValidationMessageFor(model => model.repassword, "", new { @class = "text-danger" })
        <div class="form__input pwd-input">
            @Html.PasswordFor(m => m.repassword, new { @class = "pw", @placeholder = "Xác nhận mật khẩu" })
            <div class="form__icon"><i class="fa fa-eye-slash"></i></div>
        </div>
    </div>

    <div class="form__check">
        <div class="form__checkbox">
            <input type="checkbox" id="accept-me" checked="checked">
            <label for="accept-me">Đồng ý với các điều khoản</label>
        </div>
    </div>

    <div class="btn">
        <button>Đăng kí</button>
    </div>
}

<script type="text/javascript">
    function registerDone(response) {
        if (response == true) {
            alert("Đăng ký thành công!");
            window.location.reload();
        } else {
            alert("Đăng ký thất bại!");
        }
    }
</script>