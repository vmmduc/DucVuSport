@model DucVuSport.Models.LoginModel

@using (Ajax.BeginForm("Login", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "fnSuccess" }, new { @class = "account__form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "form__message" })
    <div class="form__message">Đăng nhập</div>
    <div class="form__input">
        @Html.TextBoxFor(m => m.username, new { @placeholder = "Tên người dùng", @id = "username" })
        <div class="form__icon"><i class="fas fa-user-circle"></i></div>
    </div>
    <div class="form__input pwd-input">
        @Html.PasswordFor(m => m.password, new { @placeholder = "Mật khẩu", @class = "pw" })
        <div class="form__icon"><i class="fa fa-eye-slash"></i></div>
    </div>
    <div class="form__check">
        <div class="form__checkbox">
            @Html.CheckBoxFor(m => m.remember, htmlAttributes: new { @id = "remember-me" })
            <label for="remember-me">Nhớ mật khẩu</label>
        </div>
        <div class="form__forgot-password">
            <a href="#">Quên mật khẩu</a>
        </div>
    </div>
    <div class="btn">
        <button type="submit">Đăng nhập</button>
    </div>
}


<script type="text/javascript">
    function fnSuccess(response) {
        if (response == true) {
            displayMessage("Đăng nhập thành công !!!", 'success');
            $('.modal-header__btn').trigger('click');
            $('.header__account').removeClass('active');
        } else {
            displayMessage("Đăng nhập thất bại !!!", 'error');
        }
    }
</script>