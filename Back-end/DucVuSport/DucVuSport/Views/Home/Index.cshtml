@{
    ViewBag.Title = "Home Page";
}

<div class="body__sale">
 
</div>

<div class="feature-product">
    <div class="feature-product__heading">
        <h1>Sản phẩm nổi bật</h1>
    </div>
    <!-- product-box -->
    <div class="feature-product__body">
        <ul id="autoWidth" class="cs-hidden">

            <!-- for each here-->
            @for (var i = 0; i < 10; i++)
            {
                <li class="">
                    <div class="product__item">
                        <a class="product__content align-items-center" href="#">
                            <div class="product__discount">-30%</div>
                            <img class="product__img" src="~/Content/images/banners/no-image.jpg">
                            <h5 class="product__name">Tên của sản phẩm tên của sản phẩm</h5>
                            <div class="product__price">
                                <div class="new__price">30000000</div>
                                <div class="old__price text-decoration-line-through">30000000</div>
                            </div>
                            <div class="item__star">
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </a>
                        <div class="add-cart__btn add-to-cart" id="">
                            <span>Thêm vào giỏ</span>
                        </div>
                    </div>
                </li>
            }

        </ul>
    </div>
</div>

<div class="body__get-info">

</div>