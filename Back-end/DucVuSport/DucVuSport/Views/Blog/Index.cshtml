@model List<DucVuSport.Models.Entities.Blog>
<section class="travel-area section-gap" id="travel">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Tin tức</h1>
                </div>
            </div>
        </div>
        <div class="row row-cols-2 row-cols-sm-1 row-cols-xs-1">
            @foreach (var item in Model)
            {
                <div class="single-travel d-flex col-md-6">
                    <img class="img-fluid d-flex  mr-3" src="~/Images/img/t1.jpg" alt="">
                    <div class="media-body align-self-center">
                        <h4 class="mt-0">
                            <a href="/Blog/Detail/@item.BlogID">@item.Title</a>
                        </h4>
                        <p>@item.ShortContent</p>
                        <p>@item.CreateDate</p>
                        <div class="meta-bottom d-flex justify-content-between">
                            <p><i class="far fa-heart"></i> 15 Likes</p>
                            <p><i class="far fa-comment"></i> 02 Comments</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div style="text-align: center">
            <a href="#" class="primary-btn load-more pbtn-2 text-uppercase mx-auto mt-60">Xem thêm</a>
        </div>
    </div>
</section>