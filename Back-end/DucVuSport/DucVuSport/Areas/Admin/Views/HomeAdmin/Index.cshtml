@model IEnumerable<DucVuSport.Models.Entities.Order>
@{
    var topProduct = ViewBag.top10 as IEnumerable<DucVuSport.Models.Entities.Product>;
}
<div class="main-content">
    <div class="row">
        <div class="col-3 col-md-6 col-sm-12">
            <div class="box box-hover">
                <!-- COUNTER -->
                <div class="counter">
                    <div class="counter-title">
                        Tổng đơn đặt hàng
                    </div>
                    <div class="counter-info">
                        <div class="counter-count">
                            6578
                        </div>
                        <i class='bx bx-shopping-bag'></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3 col-md-6 col-sm-12">
            <div class="box box-hover">
                <div class="counter">
                    <div class="counter-title">
                        conversion rate
                    </div>
                    <div class="counter-info">
                        <div class="counter-count">
                            30.5%
                        </div>
                        <i class='bx bx-chat'></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3 col-md-6 col-sm-12">
            <div class="box box-hover">
                <div class="counter">
                    <div class="counter-title">
                        Tổng doanh thu
                    </div>
                    <div class="counter-info">
                        <div class="counter-count">
                            $9,780
                        </div>
                        <i class='bx bx-line-chart'></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3 col-md-6 col-sm-12">
            <div class="box box-hover">
                <div class="counter">
                    <div class="counter-title">
                        Tổng lượt xem
                    </div>
                    <div class="counter-info">
                        <div class="counter-count">
                            @ViewBag.viewTotal
                        </div>
                        <i class='bx bx-user'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3 col-md-6 col-sm-12">
            <div class="box f-height">
                <div class="box-header">
                    Sản phẩm bán chạy
                </div>
                <div class="box-body-product">
                    <ul class="product-list">
                        @foreach (var item in topProduct)
                        {
                            <li class="product-list-item">
                                <div class="item-info">
                                    @if (item.Image == null)
                                    {
                                        <img src="~/Images/Banners/no-image.jpg" alt="product image">
                                    }
                                    else
                                    {
                                        <img src="~/Images/Products/@item.Image" alt="product image">
                                    }
                                    <div class="item-name">
                                        <div class="text-second">Cloths</div>
                                        <div class="product-name">@item.ProductName</div>
                                    </div>
                                </div>
                                <div class="item-sale-info">
                                    <div class="text-second">Sales</div>
                                    <div class="product-sales">@item.Price</div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-6 col-sm-12">
            <div class="box f-height">
                <div class="box-body">
                    <div id="category-chart"></div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    Đơn đặt hàng
                </div>
                <div class="box-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ và tên</th>
                                <th>Phương thức thanh toán</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái đơn hàng</th>
                            </tr>
                        </thead>
                        <tbody class="order-table">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Payment.PaymentMethod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderStatus.Name)
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>