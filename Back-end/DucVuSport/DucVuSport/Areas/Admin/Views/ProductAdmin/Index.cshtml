@model IEnumerable<DataAccessLib.Entities.Product>

@{
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<div>
    <p class="add-new">
        @Html.ActionLink("Tạo mới", "Create")
    </p>
</div>
<table class="table">
    <thead class="tb-header">
        <tr>
            <th>Ảnh</th>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Giảm giá</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tb-body">
        @foreach (var item in Model)
        {
            var price = item.Price - item.Price * item.Discount;
            var discount = item.Discount * 100;

            <tr>
                @*Image*@
                <td>
                    <div class="order-owner">
                        @if (item.Image != null)
                        {
                            <img src="~/Content/images/@item.Image" />
                        }
                        else
                        {
                            <img src="~/Content/images/banners/no-image.jpg" />
                        }
                    </div>
                </td>

                @*Product name*@
                <td class="r-name">
                    @item.ProductName
                </td>

                @*Price*@
                <td>
                    @String.Format(format, "{0:c0}", price)
                </td>

                @*Discount*@
                <td>
                    @discount%
                </td>


                <td>
                    @item.Quantity
                </td>

                @*Status*@
                <td>
                    <div class="status paid">
                        <div class="dot"></div>
                        <span>@item.Status</span>
                    </div>
                </td>

                <td class="button">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
