@model IEnumerable<DucVuSport.Models.Entities.Product>

@{
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    ViewBag.label = "Danh sách sản phẩm";
}
<div class="bill-index-content">
    <div>
        <p class="add-new">
            @Html.ActionLink("Tạo mới", "Create")
        </p>
    </div>
    <form class="header__search">
        <label for="search-box" class="fas fa-search"></label>
        <input type="search" id="search-box" placeholder="Nhập thông tin...">
    </form>
    <div class="bill-list">
        <table class="table table-hover table-striped">
            <thead class="">
                <tr>
                    <th>Ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Giảm giá</th>
                    <th>Số lượng</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="">
                @foreach (var item in Model)
                {
                    var price = item.Price - item.Price * item.Discount;
                    var discount = item.Discount * 100;

                    <tr>
                        @*Image*@
                        <td>
                            <div class="order-owner">
                                @if (item.Image != null)
                                {
                                    <img src="~/Images/Products/@item.Image" />
                                }
                                else
                                {
                                    <img src="~/Images/Banners/no-image.jpg" />
                                }
                            </div>
                        </td>

                        @*Product name*@
                        <td class="r-name">
                            @item.ProductName
                        </td>

                        @*Price*@
                        <td>
                            @String.Format(format, "{0:c0}", price)
                        </td>

                        @*Discount*@
                        <td>
                            @discount%
                        </td>


                        <td>
                            @item.Quantity
                        </td>

                        <td class="button">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-outline-primary" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
